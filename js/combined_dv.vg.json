{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/elvisyow/3179/main/data/clean_code.csv"
  },
  "params": [
    {
      "name": "Weather_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Clear",
          "Sunny",
          "Damaging Wind",
          "Cloudy",
          "Heavy Fog",
          "Rain",
          "Thunder & Lightning"
        ],
        "labels": [
          "Show All",
          "Clear",
          "Sunny",
          "Damaging Wind",
          "Cloudy",
          "Heavy Fog",
          "Rain",
          "Thunder & Lightning"
        ],
        "name": "Weather Selection: "
      }
    },
    {
      "name": "ticket_price_filter",
      "value": 1000,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 2000,
        "step": 100,
        "name": "Maximum Average Ticket Price: "
      }
    }
  ],
  "transform": [
    {
      "filter": "Weather_selection == null || datum.OriginWeather == Weather_selection"
    }
  ],
  "vconcat": [
    {
      "width": 700,
      "height": 200,
      "mark": "line",
      "title": {
        "text": "Count of Flights Delayed by Hour of Day",
        "fontSize": 18
      },
      "encoding": {
        "x": {
          "field": "hour_of_day",
          "type": "quantitative",
          "axis": {
            "title": "Hour of Day",
            "labelFontSize": 14,
            "titleFontSize": 16
          }
        },
        "y": {
          "aggregate": "count",
          "title": "Count of Flights Delayed",
          "axis": { "grid": false, "labelFontSize": 14, "titleFontSize": 16 }
        },
        "color": {
          "value": "#ff5500"
        }
      }
    },
    {
      "projection": { "type": "equalEarth" },
      "width": 700,
      "height": 450,
      "title": {
        "text": "Flight Paths",
        "fontSize": 18
      },
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "white" }
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
            "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
          },
          "mark": { "type": "geoshape", "fill": null, "stroke": "lightgray" }
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/elvisyow/3179/main/data/clean_code.csv"
          },
          "transform": [
            { "filter": "datum.AvgTicketPrice <= ticket_price_filter" }
          ],
          "layer": [
            {
              "mark": {
                "type": "line",
                "stroke": "#ff5500",
                "strokeWidth": 0.7,
                "opacity": 0.3
              },
              "encoding": {
                "longitude": {
                  "field": "OrigLongitude",
                  "type": "quantitative"
                },
                "latitude": { "field": "OrigLatitude", "type": "quantitative" },
                "longitude2": { "field": "DestLongitude" },
                "latitude2": { "field": "DestLatitude" }
              }
            },
            {
              "mark": {
                "type": "circle",
                "color": "#fe0000",
                "size": 5
              },
              "encoding": {
                "longitude": {
                  "field": "DestLongitude",
                  "type": "quantitative"
                },
                "latitude": { "field": "DestLatitude", "type": "quantitative" },
                "tooltip": { "field": "Dest" }
              }
            },
            {
              "mark": {
                "type": "circle",
                "color": "#fe0000",
                "size": 5
              },
              "encoding": {
                "longitude": {
                  "field": "OrigLongitude",
                  "type": "quantitative"
                },
                "latitude": { "field": "OrigLatitude", "type": "quantitative" },
                "tooltip": { "field": "Origin" }
              }
            }
          ]
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "middle",
            "fontSize": 12,
            "color": "black"
          },
          "encoding": {
            "text": {
              "value": "A significant number of flights travel through Europe and North America."
            },
            "x": { "value": 150 },
            "y": { "value": 50 }
          }
        }
      ]
    }
  ],
  "config": { "title": { "font": "sans-serif", "fontSize": 14 } }
}
