{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/elvisyow/3179/main/data/clean_code.csv"
  },
  "params": [
    {
      "name": "ticket_price_filter",
      "value": 1000,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 2000,
        "step": 100,
        "name": "Maximum Average Ticket Price ($): "
      }
    }
  ],
  "layer": [
    {
      "projection": { "type": "equalEarth" },
      "width": 700,
      "height": 450,
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "white" }
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
            "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
          },
          "mark": { "type": "geoshape", "fill": null, "stroke": "lightgray" }
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/elvisyow/3179/main/data/clean_code.csv"
          },
          "transform": [
            { "filter": "datum.AvgTicketPrice <= ticket_price_filter" }
          ],
          "layer": [
            {
              "mark": {
                "type": "line",
                "stroke": "#87CEEB",
                "strokeWidth": 0.7,
                "opacity": 0.3
              },
              "encoding": {
                "longitude": {
                  "field": "OrigLongitude",
                  "type": "quantitative"
                },
                "latitude": { "field": "OrigLatitude", "type": "quantitative" },
                "longitude2": { "field": "DestLongitude" },
                "latitude2": { "field": "DestLatitude" }
              }
            },
            {
              "mark": {
                "type": "circle",
                "color": "#0056b3",
                "size": 5
              },
              "encoding": {
                "longitude": {
                  "field": "DestLongitude",
                  "type": "quantitative"
                },
                "latitude": { "field": "DestLatitude", "type": "quantitative" },
                "tooltip": { "field": "Dest" }
              }
            },
            {
              "mark": {
                "type": "circle",
                "color": "#0056b3",
                "size": 5
              },
              "encoding": {
                "longitude": {
                  "field": "OrigLongitude",
                  "type": "quantitative"
                },
                "latitude": { "field": "OrigLatitude", "type": "quantitative" },
                "tooltip": { "field": "Origin" }
              }
            }
          ]
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "fontStyle": "italic",
            "fontSize": 12,
            "color": "black"
          },
          "encoding": {
            "text": {
              "value": [
                "Most flights seem to be located",
                "around the North America and",
                "Europe region."
              ]
            },
            "x": { "value": 110 },
            "y": { "value": 50 }
          }
        },
        {
          "mark": {
            "type": "rule",
            "strokeWidth": 1,
            "color": "black"
          },
          "encoding": {
            "x": {
              "value": 120
            },
            "y": {
              "value": 90
            },
            "x2": {
              "value": 135
            },
            "y2": {
              "value": 150
            }
          }
        },
        {
          "mark": {
            "type": "rule",
            "strokeWidth": 1,
            "color": "black"
          },
          "encoding": {
            "x": {
              "value": 250
            },
            "y": {
              "value": 75
            },
            "x2": {
              "value": 265
            },
            "y2": {
              "value": 140
            }
          }
        }
      ]
    }
  ],
  "config": { "title": { "font": "sans-serif", "fontSize": 14 } }
}
